<html>
<head>
    <title>Library Management System</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #74ebd5, #ACB6E5);
            margin: 0;
            padding: 0;
            min-height: 100vh;
        }

        h1 {
            text-align: center;
            color: #fff;
            margin: 20px 0;
            font-size: 2.5rem;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.3);
        }

        .container {
            width: 90%;
            max-width: 1000px;
            background: #fff;
            margin: 20px auto;
            padding: 20px 30px;
            border-radius: 15px;
            box-shadow: 0 6px 15px rgba(0,0,0,0.2);
        }

        h2 {
            margin-top: 10px;
            color: #333;
            border-left: 5px solid #4CAF50;
            padding-left: 10px;
        }

        /* Table Styling */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 12px 15px;
            text-align: center;
        }

        th {
            background: #4CAF50;
            color: white;
            text-transform: uppercase;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background: #f1f1f1;
        }

        /* Buttons */
        button {
            padding: 8px 15px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: bold;
            transition: 0.3s;
        }

        button:hover {
            transform: scale(1.05);
        }

        .issue-btn {
            background: #ff9800;
            color: #fff;
        }

        .return-btn {
            background: #2196F3;
            color: #fff;
        }

        .delete-btn {
            background: #f44336;
            color: #fff;
        }

        .add-btn {
            background: #4CAF50;
            color: white;
            margin-top: 10px;
            padding: 10px 20px;
        }

        /* Form Styling */
        form {
            margin-top: 15px;
        }

        input[type="text"],
        input[type="number"] {
            padding: 10px;
            margin: 8px 10px 8px 0;
            width: calc(25% - 12px);
            border: 1px solid #ccc;
            border-radius: 6px;
            outline: none;
            transition: 0.3s;
        }

        input:focus {
            border-color: #4CAF50;
            box-shadow: 0 0 6px rgba(76,175,80,0.5);
        }

        /* Responsive */
        @media (max-width: 768px) {
            table, th, td {
                font-size: 14px;
            }

            input[type="text"],
            input[type="number"] {
                width: 100%;
                margin: 8px 0;
            }

            .add-btn {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <h1>ðŸ“š Library Management System</h1>

    <div class="container">
        <!-- Display Books -->
        <h2>All Books</h2>
        <table>
            <tr>
                <th>Book Name</th>
                <th>Book Author</th>
                <th>Book Pages</th>
                <th>Book Price</th>
                <th>Availability</th>
                <th>Actions</th>
            </tr>
            <% data.forEach(element => { %>
                <tr>
                    <td><%= element.bookName %></td>
                    <td><%= element.bookAuthor %></td>
                    <td><%= element.bookPages %></td>
                    <td>â‚¹<%= element.bookPrice %></td>
                    <td><%= element.bookState %></td>
                    <td>
                        <% if (element.bookState === "Available") { %>
                            <form action="/issue" method="post" style="display:inline;">
                                <input type="hidden" name="bookName" value="<%= element.bookName %>">
                                <button type="submit" class="issue-btn">Issue</button>
                            </form>
                        <% } %>

                        <% if (element.bookState === "Issued") { %>
                            <form action="/return" method="post" style="display:inline;">
                                <input type="hidden" name="bookName" value="<%= element.bookName %>">
                                <button type="submit" class="return-btn">Return</button>
                            </form>
                        <% } %>

                        <form action="/delete" method="post" style="display:inline;">
                            <input type="hidden" name="bookName" value="<%= element.bookName %>">
                            <button type="submit" class="delete-btn">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </table>

        <!-- Add Book Form -->
        <h2>Add New Book</h2>
        <form action="/" method="post">
            <input type="text" placeholder="Book Name" name="bookName" required>
            <input type="text" placeholder="Book Author" name="bookAuthor" required>
            <input type="number" placeholder="Book Pages" name="bookPages" required>
            <input type="number" placeholder="Book Price" name="bookPrice" required>
            <button type="submit" class="add-btn">âž• Add Book</button>
        </form>
    </div>
</body>
</html>
